@page "/Productos/Delete/{ProductoId:int}"
@using AP1GestionInventario.Models
@using AP1GestionInventario.Services
@using Microsoft.AspNetCore.Authorization
@inject ProductoService productoService
@inject NavigationManager navigationManager
@attribute [Authorize]
@rendermode InteractiveServer

<PageTitle>Eliminar Producto</PageTitle>

<div class="container mt-4">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white">
            <h3><i class="bi bi-trash"></i> Eliminar Producto</h3>
        </div>
        <div class="card-body">
            <h4 class="text-danger">¿Está seguro de que desea eliminar este producto?</h4>
            <hr />

            @if (producto != null)
            {
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">ProductoId:</dt>
                            <dd class="col-sm-8">@producto.ProductoId</dd>

                            <dt class="col-sm-4">Descripción:</dt>
                            <dd class="col-sm-8">@producto.Descripcion</dd>

                            <dt class="col-sm-4">Costo:</dt>
                            <dd class="col-sm-8">@producto.Costo.ToString("C")</dd>

                            <dt class="col-sm-4">Precio:</dt>
                            <dd class="col-sm-8">@producto.Precio.ToString("C")</dd>

                            <dt class="col-sm-4">Existencia:</dt>
                            <dd class="col-sm-8"><span class="badge bg-info">@producto.Existencia</span></dd>
                        </dl>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(mensaje))
                {
                    <div class="alert alert-danger" role="alert">
                        @mensaje
                    </div>
                }

                <div class="d-flex justify-content-between mt-3">
                    <button type="button" @onclick="Volver" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver
                    </button>
                    <button type="button" @onclick="Eliminar" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Eliminar
                    </button>
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    Producto no encontrado.
                </div>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int ProductoId { get; set; }

    public Producto? producto { get; set; }
    private string mensaje = "";

    protected override async Task OnInitializedAsync()
    {
        producto = await productoService.Buscar(ProductoId);
    }

    private async Task Eliminar()
    {
        try
        {
            var eliminado = await productoService.Eliminar(ProductoId);

            if (eliminado)
            {
                navigationManager.NavigateTo("/Productos");
            }
            else
            {
                mensaje = "No se pudo eliminar el producto.";
            }
        }
        catch (Exception ex)
        {
            mensaje = $"Error: {ex.Message}";
        }
    }

    private void Volver()
    {
        navigationManager.NavigateTo("/Productos");
    }
}